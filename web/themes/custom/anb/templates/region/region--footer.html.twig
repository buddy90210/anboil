{% if content %}
  {% block region %}
    <footer{{ attributes.addClass(region) }}>
      {% block content %}
        <div class="{{ region ~ '__content container' }}">
        {{ content }}
        </div>
      {% endblock %}
    </footer>
  {% endblock %}
{% endif %}

<div class="modals">
  <div class="modal-overlay"></div>

  <div class="modal-form" id="callbackform">
    <span class="modal-form__close close-icon">×</span>
    <p class="modal-form__heading">Заказать звонок</p>
    {{ drupal_entity('contact_form', 'callbackform', null, null, false) }}
  </div>
</div>
